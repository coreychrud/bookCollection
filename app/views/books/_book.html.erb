<div id="<%= dom_id book %>">
  <p>
    <strong>Title:</strong>
    <%= book.title %>
  <br>
  <strong>Author:</strong>
  <%= book.author %>
  <br>
  <strong>Price:</strong>
  <%= number_to_currency(book.price) %>
  <br>
  <strong>Published Date:</strong>
  <%= book.published_date.present? ? book.published_date.strftime("%B %d, %Y") : "N/A" %>
  </p>

</div>
